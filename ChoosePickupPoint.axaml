<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Market.ChoosePickupPoint"
        Title="Выбор адреса"
        Width="500"
        Height="650"
        WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Выбрать" x:Name="SelectBtn" Foreground="White" Background="#76E383" Width="100" Height="40" VerticalAlignment="Top" Margin="10" />
        <Button Grid.Row="0" Content="Выйти" x:Name="ExitBtn" Foreground="White" Background="#76E383" Width="100" Height="40" VerticalAlignment="Top" Margin="120,0,0,10" />
        
        
        <ListBox Grid.Row="1" x:Name="AddressListBox" Margin="10" Background="LightGray"/>
        
         </Grid>
</Window>